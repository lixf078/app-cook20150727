<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="15dip"
    android:layout_marginTop="3dip"
    android:background="@color/item_background_color"
    android:orientation="horizontal" >

    <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
        android:id="@+id/cookbook_item_comment_uportrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/icon"
        android:focusable="false"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/cookbook_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cookbook_item_comment_uportrait"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cookbook_item_comment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/cookbook_item_comment_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/app_name"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/cookbook_item_comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_below="@id/cookbook_item_comment_nickname"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/app_name"
            android:textColor="@color/date_color" />
    </RelativeLayout>

</RelativeLayout>