<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:orientation="horizontal" >

    <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/personal_topic_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/item_img"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/personal_topic_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/personal_topic_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/personal_topic_item_title"
            android:ellipsize="marquee"
            android:gravity="right"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/date_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/personal_topic_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_topic_item_title"
            android:layout_marginTop="5dip"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/date_color" />

        <RelativeLayout
            android:id="@+id/personal_topic_item_image_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_topic_item_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
                android:id="@+id/personal_topic_item_image_info_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
                android:id="@+id/personal_topic_item_image_info_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/personal_topic_item_image_info_1"
                android:focusable="false"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
                android:id="@+id/personal_topic_item_image_info_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/personal_topic_item_image_info_2"
                android:focusable="false"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <com.shecook.wenyi.common.volley.toolbox.NetworkImageView
                android:id="@+id/personal_topic_item_image_info_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/personal_topic_item_image_info_3"
                android:focusable="false"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>