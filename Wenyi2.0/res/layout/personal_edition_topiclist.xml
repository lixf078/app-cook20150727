<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- The PullToRefreshListView replaces a standard ListView widget. <com.shecook.wenyi.common.pulltorefresh.CopyOfRefreshAndMoreListView -->

    <com.shecook.wenyi.common.pulltorefresh.CopyOfRefreshAndMoreListView
        android:id="@id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        leui:leListViewMode="leSwipe"
        leui:leSwipeActionLeft="reveal"
        leui:leSwipeAnimationTime="250"
        leui:leSwipeBackView="@+id/back"
        leui:leSwipeCloseAllItemsWhenMoveList="true"
        leui:leSwipeFrontView="@+id/front"
        leui:leSwipeMode="left"
        leui:leSwipeOffsetLeft="70dip"
        android:smoothScrollbar="true"/>

</LinearLayout>