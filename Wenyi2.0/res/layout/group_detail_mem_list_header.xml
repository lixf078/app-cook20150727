<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/group_detail_item_new_mem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/group_detail_item_new_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/group_press"
            android:focusable="false"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/group_detail_item_new_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/group_detail_item_new_img"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="新成员申请"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/group_detail_item_new_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textview_circle_orange"
            android:textColor="@color/black"
            android:text="10" />

        <ImageView
            android:id="@+id/group_detail_item_new_num_ico"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/group_detail_item_new_num"
            android:focusable="false"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>