<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/wenyi_common_header"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@color/wenyi_common_background_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/wenyi_common_head_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:paddingBottom="3dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@id/return_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/f53_btn"
            android:scaleType="fitXY" />

        <TextView
            android:id="@id/middle_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@id/right_img"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/settings"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>