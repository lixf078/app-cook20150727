<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 自动宽高 -->
    <style name="wrapWH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 全屏宽、自动高 -->
    <style name="matchW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 全屏宽高 -->
    <style name="macthWH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 菜单按钮 -->
    <style name="menuButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 内容字体色 -->
    <style name="titleFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#434343</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 内容字体色 -->
    <style name="contentColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#434343</item>
    </style>

    <!-- 分享按钮 -->
    <style name="shareBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- 遮罩层 -->
    <style name="maskDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 图文排版 -->
    <style name="fontPic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- 关于文怡图文排版 -->
    <style name="font_about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- 图文标题 -->
    <style name="fontTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff6600</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 图片排版 -->
    <style name="pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 对话框效果 -->
    <style name="my_dialog" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- 下拉刷新顶部加载中动画 -->
    <style name="PullToRefreshHeaderProgress" parent="android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/header_progress</item>
    </style>

    <style name="progressBarStyleSmallHead" parent="android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/header_progress</item>
    </style>

    <style name="PopToast">
        <item name="@android:windowEnterAnimation">@anim/anim_toast_enter</item>
        <item name="@android:windowExitAnimation">@anim/anim_toast_exit</item>
    </style>
    <style name="HorizScrollViewItem">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">Sample Item</item>
    </style>

</resources>
