<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leui="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="18dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/le_bottomsheet_switchbutton_icon"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/le_bottomsheet_switchbutton_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/le_bottomsheet_title_color_default"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/le_bottomsheet_btn_chk_ctn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:soundEffectsEnabled="false" >

        <com.letv.shared.widget.LeCheckBox
            android:id="@+id/le_bottomsheet_switchbutton_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            leBoxInnerPadding="5dp"
            leBoxOnColor="@color/le_bottomsheet_content_color_link"
            android:gravity="center"
            android:textColor="#414141"
            android:textSize="14sp" >
        </com.letv.shared.widget.LeCheckBox>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/le_bottomsheet_gapline_color" />

    <Button
        android:id="@+id/le_bottomsheet_btn_confirm_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:ellipsize="end"
        android:paddingBottom="17dp"
        android:paddingTop="17dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/le_bottomsheet_gapline_color" />

    <Button
        android:id="@+id/le_bottomsheet_btn_cancel_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/item_background_holo_light"
        android:ellipsize="end"
        android:paddingBottom="17dp"
        android:paddingTop="17dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/le_bottomsheet_title_color_default"
        android:textSize="18sp" />

</LinearLayout>